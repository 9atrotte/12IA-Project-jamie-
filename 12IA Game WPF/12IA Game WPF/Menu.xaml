<Window x:Class="_12IA_Game_WPF.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12IA_Game_WPF"
        mc:Ignorable="d"
        Title="Menu" Height="1080" Width="1920" WindowState="Maximized" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None">
    <Canvas x:Name="cnvMenu">
        <Image x:Name="imgBackground" Height="1080" Width="3840" Source="/images/space background 2.png" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnPlay" Content="Play" HorizontalAlignment="Center" VerticalAlignment="Top" Width="236" Click="btnPlay_Click" Height="108" FontSize="100" FontFamily="./Fonts/#Mario Kart DS" Canvas.Left="842" Canvas.Top="540" Background="Transparent" Foreground="#FFD62246" BorderThickness="0"/>
        <Button x:Name="btnCredits" Content="Credits" HorizontalAlignment="Center" VerticalAlignment="Center" Width="208" Height="56" FontSize="36" Click="btnCredits_Click" Canvas.Left="856" Canvas.Top="653" FontFamily="./Fonts/#Mario Kart DS" Background="Transparent" BorderThickness="0" Foreground="#FFD62246"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" Click="btnExit_Click" Height="61" FontSize="50"  FontFamily="./Fonts/#Mario Kart DS"  Background="Transparent" Foreground="#FFD62246" BorderThickness="0" Canvas.Left="1793" Canvas.Top="10"/>
        <TextBlock x:Name="txtTitle" Canvas.Left="314" TextWrapping="Wrap" Text="Space Game" Canvas.Top="217" Width="1292" TextAlignment="Center" FontFamily="./Fonts/#AvalanchenoBitma" Foreground="#FF00C49A" Background="{x:Null}" FontSize="250" Height="185" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
    </Canvas>
</Window>
